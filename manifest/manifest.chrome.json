{
  "name": "ChromeShell",
  "version": "2.1.0",
  "description": "Automate steps when website load eg. skip ads in youtube, set speed ...",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/helper.js", "src/const.js", "src/videoEventHandler.js", "src/speed.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": [
        "src/youtube/ads.js",
        "src/youtube/view.js",
        "src/youtube/speed.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.bilibili.com/video/*"],
      "js": ["src/bilibili/view.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "resource/icon.png"
  },
  "commands": {
    "faster": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Speed up the video"
    },
    "slower": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Slow down the video"
    }
  }
}
